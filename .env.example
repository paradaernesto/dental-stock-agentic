# Copy this file to .env and fill in the values

# Database
DATABASE_URL="file:./dev.db"

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000

# GitHub Token - Required for 'act' local CI testing
# Get yours at: https://github.com/settings/tokens (needs 'repo' scope)
# Used by: scripts/act-local.sh
GITHUB_TOKEN=

# AI Provider Configuration
# Options: "claude" or "kimi"
AI_PROVIDER=claude

# Claude Code Configuration
# Get your API key at: https://console.anthropic.com/settings/keys
# Set as repository secret: ANTHROPIC_API_KEY
ANTHROPIC_API_KEY=
CLAUDE_CODE_PATH=claude

# Kimi Code Configuration
# Get your API key at: https://platform.moonshot.cn/
# Set as repository secret: KIMI_API_KEY
KIMI_API_KEY=
KIMI_CODE_PATH=kimi

# Legacy name (deprecated, use ANTHROPIC_API_KEY)
CLAUDE_API_KEY=
