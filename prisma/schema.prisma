generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Supply {
  id            String   @id @default(uuid())
  name          String
  category      String
  unit          String
  stock         Int      @default(0)
  minimumStock  Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([name])
  @@index([category])
}
