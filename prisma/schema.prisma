generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Supply {
  id          String   @id @default(uuid())
  name        String
  code        String   @unique
  description String?
  quantity    Int      @default(0)
  minStock    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([name])
  @@index([code])
}
